@{

    Layout = "~/Views/Shared/ContentPage.cshtml";
}


<section class="kc-elm kc-css-415113 kc_row">
    <div class="kc-row-container  kc-container">
        <div class="kc-wrap-columns">
            <div class="kc-elm kc-css-678992 kc_col-sm-12 kc_column kc_col-sm-12">
                <div class="kc-col-container">
                    <div class="kc-elm kc-css-367109 kc_text_block">
                      
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Register Institution</h3>
                            </div>
                            <div class="panel-body">
                                <form class="form-horizontal">
                                    <fieldset>
                                        <legend>Fill the Form</legend>
                                        <div class="form-group">
                                            <p><label class="col-lg-2 control-label" for="institutionname">Institution Name</label></p>
                                            <div class="col-lg-10"><input id="institutionname" class="form-control" type="text" placeholder="Institution Name"></div>
                                        </div>
                                        <div class="form-group">
                                            <p><label class="col-lg-2 control-label" for="inputEmail">Email</label></p>
                                            <div class="col-lg-10"><input id="inputEmail" class="form-control" type="text" placeholder="Email"></div>
                                        </div>
                                        <div class="form-group">
                                            <p><label class="col-lg-2 control-label" for="institutionenterpassword">Password</label></p>
                                            <div class="col-lg-10">
                                                <p><input id="institutionenterpassword" class="form-control" type="password" placeholder="Password"></p>

                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <p><label class="col-lg-2 control-label" for="institutionreenterpassword">Re Enter Password</label></p>
                                            <div class="col-lg-10">
                                                <p><input id="institutionreenterpassword" class="form-control" type="password" placeholder="Re Enter Password"></p>

                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <p><label class="col-lg-2 control-label" for="textArea">Description</label></p>
                                            <div class="col-lg-10"><textarea id="textArea" class="form-control" rows="3"></textarea> <span class="help-block">Enter complete description about the your Institution</span></div>
                                        </div>
                                        <div class="form-group">
                                            <p><label class="col-lg-2 control-label">Radios</label></p>
                                            <div class="col-lg-5">
                                                <div class="radio"><label> <input id="optionsRadios1" checked="checked" name="optionsRadios" type="radio" value="option1"> Academic </label></div>
                                                <div class="radio"><label> <input id="optionsRadios2" name="optionsRadios" type="radio" value="option2"> Non Academic </label></div>
                                            </div>
                                          
                                        </div>
                                       
                                        <div class="form-group">
                                            <div class="col-lg-10 col-lg-offset-2">
                                            <button class="btn btn-default">Clear</button>
                                            <button class="btn btn-default" type="submit">Submit</button></div>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                      
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
